<html>
  <head>
        <title>credits</title>
	<link type="text/css" rel="stylesheet" href="css/credits.css">
  </head>
  <body>
    <div class="view" style="background-image:url({{ background }});">
      
      <div class="header">
	<div class="logo header_logo">
	  <img src="{{ logo.url }}">
	</div>
      </div> <!-- header -->
      
      <div class="main">
		  
	<div class="bar_box main__bar_box">    
    
	  <div class="bar main__bar" 
	     style="background:linear-gradient(to right, {{ bar.leftColor }}, {{ bar.rightColor }});color: {{ bar.textColor }}">	
	      <b>{{ bar.text }}</b> 
          </div>
      
          <div class="box">
	    
	    <div class="box__logo">
	      <img src="{{ logo_ustl.url }}">
	    </div>
	    
	    <div class="box__logo">
	      <img src="{{ logo_ipm.url }}">
	    </div>

	    <div class="developer box_item">
	      <h3 style="color:{{ developer.color }}">{{ developer.text }}</h3>
	      <ul>
		<li> {{ developers.1 }} </li>
		<li> {{ developers.2 }} </li>
		<li> {{ developers.3 }} </li>
		<li> {{ developers.4 }} </li>
	      </ul>
	    </div>

          </div>

	</div> <!-- bar_box -->
	
	<button class="button main__button"
                style="background:{{ button.bgcolor }}; color:{{ button.color }};">
          <b>{{ button.text }}</b> </button>
	
      </div> <!-- main -->
      
      <div class="footer">
	<img src="{{ footer }}">
      </div>
      
    </div> <!-- view -->
  </body>
</html>
